# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ecommerce

# QStash Configuration
QSTASH_TOKEN=your_qstash_token_here
QSTASH_CURRENT_SIGNING_KEY=your_current_signing_key
QSTASH_NEXT_SIGNING_KEY=your_next_signing_key

# Service URLs (for publishing events)
QSTASH_ORDERS_URL=https://your-orders-service.vercel.app/api/webhook
QSTASH_EMAIL_URL=https://your-email-service.vercel.app/api/webhook
QSTASH_INVENTORY_URL=https://your-inventory-service.vercel.app/api/webhook
QSTASH_ANALYTICS_URL=https://your-analytics-service.vercel.app/api/webhook

# SMTP Configuration (for sending emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@example.com

# CORS Configuration (optional)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_MAX_AGE=86400

# Public URLs
NEXT_PUBLIC_EMAIL_SERVICE_URL=https://your-email-service.vercel.app
